<% content_for :page_title do %>
  Edit Listing
<% end %>

<% content_for :page_actions do %>
  <%= link_to 'Back to Listings', spree.admin_listings_path, class: 'btn btn-primary' %>
  <%= link_to 'View Listing', spree.admin_listing_path(@listing), class: 'btn btn-secondary' %>
<% end %>

<div class="card">
  <div class="card-header">
    <h5 class="card-title">Edit Listing: <%= @listing.title %></h5>
  </div>
  <div class="card-body">
    <%= render 'form' %>
  </div>
</div>
