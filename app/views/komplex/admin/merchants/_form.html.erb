<div data-hook="admin_merchant_form_fields">
  <div class="row">
    <div class="col-12 col-md-6">
      <div class="form-group">
        <%= f.label :name, Spree.t('komplex.merchants.name') %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_message_on :name %>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="form-group">
        <%= f.label :user_id, Spree.t('komplex.merchants.user') %>
        <%= f.collection_select :user_id, Spree::User.all, :id, :email, { include_blank: true }, { class: 'select2' } %>
        <%= f.error_message_on :user_id %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-6">
      <div class="form-group">
        <%= f.label :commission_rate, Spree.t('komplex.merchants.commission_rate') %>
        <div class="input-group">
          <%= f.number_field :commission_rate, class: 'form-control', min: 0, max: 1, step: 0.01 %>
          <div class="input-group-append">
            <span class="input-group-text">%</span>
          </div>
        </div>
        <small class="form-text text-muted"><%= Spree.t('komplex.merchants.commission_rate_hint') %></small>
        <%= f.error_message_on :commission_rate %>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="form-group">
        <%= f.label :status, Spree.t('komplex.merchants.status') %>
        <%= f.select :status, options_for_select([['Pending', 'pending'], ['Approved', 'approved'], ['Rejected', 'rejected']], f.object.status), {}, { class: 'select2' } %>
        <%= f.error_message_on :status %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="form-group">
        <%= f.label :description, Spree.t('komplex.merchants.description') %>
        <%= f.text_area :description, class: 'form-control', rows: 5 %>
        <%= f.error_message_on :description %>
      </div>
    </div>
  </div>
</div>
