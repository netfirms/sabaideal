<header class="bg-dark text-white py-3">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-3">
        <a href="/" class="text-white text-decoration-none">
          <h1 class="h4 mb-0"><%= current_store.name %></h1>
        </a>
      </div>
      <div class="col-md-6">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to 'Home', spree.root_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Products', spree.products_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Marketplace', main_app.listings_path, class: 'nav-link' %>
              </li>
              <% if spree_current_user&.merchant %>
                <li class="nav-item">
                  <%= link_to 'My Listings', main_app.my_listings_path, class: 'nav-link' %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
      <div class="col-md-3 text-end">
        <% if spree_current_user %>
          <div class="dropdown d-inline-block">
            <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-user"></i> <%= spree_current_user.email %>
            </button>
            <ul class="dropdown-menu" aria-labelledby="userDropdown">
              <%= link_to 'My Account', spree.account_path, class: 'dropdown-item' %>
              <%= link_to 'Log Out', spree.logout_path, method: :get, class: 'dropdown-item' %>
            </ul>
          </div>
        <% else %>
          <%= link_to 'Sign In', spree.login_path, class: 'btn btn-outline-light me-2' %>
          <%= link_to 'Register', spree.signup_path, class: 'btn btn-light' %>
        <% end %>
        <%= link_to spree.cart_path, class: 'btn btn-outline-light ms-2' do %>
          <i class="fas fa-shopping-cart"></i>
          <span class="badge bg-danger"><%= current_order&.item_count || 0 %></span>
        <% end %>
      </div>
    </div>
  </div>
</header>