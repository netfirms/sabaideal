<div data-hook="admin_listing_form_fields">
  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.field_container :title, class: ['form-group'] do %>
        <%= f.label :title, Spree.t('komplex.listings.title') %>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.error_message_on :title %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :type, class: ['form-group'] do %>
        <%= f.label :type, Spree.t('komplex.listings.type') %>
        <%= f.select :type, @listing_types, {}, class: 'select2' %>
        <%= f.error_message_on :type %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.field_container :vendor_id, class: ['form-group'] do %>
        <%= f.label :vendor_id, Spree.t('komplex.listings.vendor') %>
        <%= f.collection_select :vendor_id, @vendors, :id, :name, {}, class: 'select2' %>
        <%= f.error_message_on :vendor_id %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :price, class: ['form-group'] do %>
        <%= f.label :price, Spree.t('komplex.listings.price') %>
        <%= f.text_field :price, class: 'form-control' %>
        <%= f.error_message_on :price %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= f.field_container :description, class: ['form-group'] do %>
        <%= f.label :description, Spree.t('komplex.listings.description') %>
        <%= f.text_area :description, class: 'form-control', rows: 5 %>
        <%= f.error_message_on :description %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.field_container :status, class: ['form-group'] do %>
        <%= f.label :status, Spree.t('komplex.listings.status') %>
        <%= f.select :status, @statuses, {}, class: 'select2' %>
        <%= f.error_message_on :status %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :featured, class: ['form-group'] do %>
        <%= f.label :featured, Spree.t('komplex.listings.featured') %>
        <%= f.check_box :featured, class: 'form-check-input' %>
        <%= f.error_message_on :featured %>
      <% end %>
    </div>
  </div>
</div>