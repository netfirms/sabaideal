<% content_for :page_title do %>
  <%= Spree.t('komplex.payouts.new') %>
<% end %>

<%= form_for [:admin, @payout] do |f| %>
  <div class="card mb-4">
    <div class="card-header">
      <%= Spree.t('komplex.payouts.details') %>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-12 col-md-6">
          <%= f.field_container :vendor_id, class: ['form-group'] do %>
            <%= f.label :vendor_id, Spree.t('komplex.payouts.vendor') %>
            <%= f.collection_select :vendor_id, @vendors, :id, :name, {}, class: 'select2' %>
            <%= f.error_message_on :vendor_id %>
          <% end %>
        </div>

        <div class="col-12 col-md-6">
          <%= f.field_container :amount, class: ['form-group'] do %>
            <%= f.label :amount, Spree.t('komplex.payouts.amount') %>
            <%= f.text_field :amount, class: 'form-control' %>
            <%= f.error_message_on :amount %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <%= f.field_container :notes, class: ['form-group'] do %>
            <%= f.label :notes, Spree.t('komplex.payouts.notes') %>
            <%= f.text_area :notes, class: 'form-control', rows: 5 %>
            <%= f.error_message_on :notes %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= button_tag Spree.t('actions.create'), class: 'btn btn-primary' %>
    <%= link_to Spree.t('actions.cancel'), admin_payouts_path, class: 'btn btn-secondary' %>
  </div>
<% end %>