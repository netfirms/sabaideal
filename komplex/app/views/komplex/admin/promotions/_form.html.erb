<div data-hook="admin_promotion_form_fields">
  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.field_container :title, class: ['form-group'] do %>
        <%= f.label :title, Spree.t('komplex.promotions.title') %>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.error_message_on :title %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :promotion_type, class: ['form-group'] do %>
        <%= f.label :promotion_type, Spree.t('komplex.promotions.promotion_type') %>
        <%= f.select :promotion_type, ['Percentage', 'Fixed Amount'], {}, class: 'select2' %>
        <%= f.error_message_on :promotion_type %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.field_container :discount_amount, class: ['form-group'] do %>
        <%= f.label :discount_amount, Spree.t('komplex.promotions.discount_amount') %>
        <%= f.text_field :discount_amount, class: 'form-control' %>
        <%= f.error_message_on :discount_amount %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :vendor_id, class: ['form-group'] do %>
        <%= f.label :vendor_id, Spree.t('komplex.promotions.vendor') %>
        <%= f.collection_select :vendor_id, @vendors, :id, :name, { include_blank: Spree.t('komplex.promotions.platform_wide') }, class: 'select2' %>
        <%= f.error_message_on :vendor_id %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.field_container :starts_at, class: ['form-group'] do %>
        <%= f.label :starts_at, Spree.t('komplex.promotions.starts_at') %>
        <%= f.text_field :starts_at, class: 'form-control datepicker' %>
        <%= f.error_message_on :starts_at %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :ends_at, class: ['form-group'] do %>
        <%= f.label :ends_at, Spree.t('komplex.promotions.ends_at') %>
        <%= f.text_field :ends_at, class: 'form-control datepicker' %>
        <%= f.error_message_on :ends_at %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.field_container :code, class: ['form-group'] do %>
        <%= f.label :code, Spree.t('komplex.promotions.code') %>
        <%= f.text_field :code, class: 'form-control' %>
        <%= f.error_message_on :code %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :usage_limit, class: ['form-group'] do %>
        <%= f.label :usage_limit, Spree.t('komplex.promotions.usage_limit') %>
        <%= f.number_field :usage_limit, class: 'form-control', min: 0 %>
        <%= f.error_message_on :usage_limit %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= f.field_container :description, class: ['form-group'] do %>
        <%= f.label :description, Spree.t('komplex.promotions.description') %>
        <%= f.text_area :description, class: 'form-control', rows: 5 %>
        <%= f.error_message_on :description %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.field_container :listing_id, class: ['form-group'] do %>
        <%= f.label :listing_id, Spree.t('komplex.promotions.listing') %>
        <%= f.collection_select :listing_id, @listings, :id, :title, { include_blank: Spree.t('komplex.promotions.all_listings') }, class: 'select2' %>
        <%= f.error_message_on :listing_id %>
      <% end %>
    </div>
  </div>
</div>